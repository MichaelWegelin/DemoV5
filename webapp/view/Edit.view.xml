<mvc:View controllerName="de.wegelin.controller.Edit" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:footerbar="sap.ushell.ui.footerbar" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form">
	<Page id="page" navButtonPress="onNavBack" showNavButton="{device>/system/phone}" title="Edit business partner">
		<content>
			<f:SimpleForm>
				<Label text="Business Partner Id"></Label>
				<Text text="{newSupplier>/BpId}"></Text>
				<Label text="Company Name"></Label>
				<Input value="{newSupplier>/CompanyName}"></Input>
				<Label text="Legal Form"></Label>
				<Input value="{newSupplier>/LegalForm}"></Input>
				<Label text="Street"></Label>
				<Input value="{newSupplier>/Street}"></Input>
				<Label text="Building"></Label>
				<Input value="{newSupplier>/Building}"></Input>
				<Label text="City"></Label>
				<Input value="{newSupplier>/City}"></Input>
				<Label text="Country"></Label>
				<Input value="{newSupplier>/Country}"></Input>
				<Label text="Postal Code"></Label>
				<Input value="{newSupplier>/PostalCode}"></Input>
				<Label text="Email Address"></Label>
				<Input value="{newSupplier>/EmailAddress}"></Input>
				<Label text="Phone Number"></Label>
				<Input value="{newSupplier>/PhoneNumber}"></Input>
				<Label text="Fax Number"></Label>
				<Input value="{newSupplier>/FaxNumber}"></Input>
				<Label text="Web Address"></Label>
				<Input value="{newSupplier>/WebAddress}"></Input>
				<Label text="Currency Code"></Label>
				<Input value="{newSupplier>/CurrencyCode}"></Input>
				<Label text="Bp Role"></Label>
				<Input value="{newSupplier>/BpRole}"></Input>
				<Label text="Address Type"></Label>
				<Input value="{newSupplier>/AddressType}"></Input>
			</f:SimpleForm>			
		</content>
		<footer>
			<OverflowToolbar id="footerToolbar">
				<ToolbarSpacer/>
				<Button text="Save" type="Accept" press="onSave" ></Button>
				<Button text="Cancel" type="Reject" press="onCancel" ></Button>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>